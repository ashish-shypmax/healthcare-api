{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
"globals": {
    "readDb": true,
    "writeDb": true,
    "logger" : true
  },
  "rules": {
    "indent": ["error", 4],
    "no-unused-vars": "error",
    "semi": ["error", "always"],
    "prefer-const": "error",
    "no-undef": "error"
  }
}
